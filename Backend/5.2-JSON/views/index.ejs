        <li><%= name %>, <%= preparation %></li>
        
        <% const salsa = recipe.ingredients.salsa %>
        <li><%= salsa.name %>, <%= salsa.spiciness %></li>
        
        <% const { toppings } = recipe.ingredients %>
        <% for (let i = 0; i < toppings.length; i++) { %>
          <li><%= toppings[i].quantity %> <%= toppings[i].name %></li>
        <% } %>
      </ul>
    <% } %>
  </div>
